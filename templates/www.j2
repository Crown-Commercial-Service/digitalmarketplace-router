{% from "_macros.j2" import proxy_headers with context %}
{% from "_macros.j2" import prepare_trace_header_values with context %}

{% if rate_limiting_enabled == "enabled" %}
# Define the static page server that serves our 429 error page (listen on 10823)
server {
    listen 10823;
    server_name _;
    root {{ static_files_root }};
    rewrite ^(.*)$ /too_many_requests.html break;
}
{% endif %}

server {
    listen 80;
    server_name www.*;
    root {{ static_files_root }};

    {% for user_ip in user_ips.split(",") %}
    allow {{ user_ip }};
    {% endfor %}
    deny all;

{% if rate_limiting_enabled == "enabled" %}
    # Apply rate limiting to requests on this (www) server
    limit_req zone=dm_limit burst=40;
    limit_req zone=dm_post_limit burst=5;

    # Define a new location "@too_many_requests" which will proxy as a GET to localhost:10823
    location @too_many_requests {
        add_header Retry-After 300 always;

        # Cannot POST to static pages, so proxy to a dedicated server block using GET
        proxy_method GET;
        proxy_pass http://localhost:10823;
    }

    # Direct 429 errors to the @too_many_requests location because we return 429 errors for rate limit errors
    # (see nginx.conf)
    error_page 429 @too_many_requests;

{% endif %}

    {{ prepare_trace_header_values() }}

    location /robots.txt {
        rewrite ^(.*)$ /robots_www.txt break;
    }

    # Block access to metrics paths
    location ~ /_metrics$ {
        deny all;
    }

    set $frontend_url {{ frontend_url }};

    location ~ (^/admin($|/$|/.+$)) {
        {% for admin_ip in admin_user_ips.split(",") %}
        allow {{ admin_ip }};
        {% endfor %}
        deny all;

        {{ proxy_headers () }}
        proxy_set_header Authorization "Basic {{ app_auth }}";

        proxy_pass $frontend_url$1$is_args$args;
    }

    location ~ (/.*) {
        {{ proxy_headers () }}
        proxy_set_header Authorization "Basic {{ app_auth }}";

        proxy_pass $frontend_url$1$is_args$args;
    }
}
